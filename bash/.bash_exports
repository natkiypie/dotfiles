# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
# git config
# export GIT_CONFIG="$HOME/.dotfiles/config/.config/gitconfig"
# editor
export EDITOR="nvim"
# pager
export PAGER="less"
# config (used in: ~/.dotfiles/config/.config/nvim/lua/scripts/terminals/broot.lua)
export XDG_CONFIG_HOME="$HOME/.config"
# lazygit config dir
export CONFIG_DIR="$HOME/.dotfiles/config/.config/lazygit"
# lazygit config file
export LG_CONFIG_FILE="$HOME/.config/lazygit/config.yml"
